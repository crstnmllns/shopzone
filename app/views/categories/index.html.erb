<p id="notice"><%= notice %></p>
<div class="main">
  <h3>Add to new category</h3>
  <div class="container">
    <div class="row">
        <div class="container col-md-6 ">
          <div class="table-responsive" data-pattern="priority-columns">
            <table  id="cat" class="table table-hover" >
                <thead class="thead-dark">
                  <tr>
                    <th>Name</th>
                    <th>Opciones</th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @categories %>
                </tbody>
              </table>
            <br>
          </div>
        </div>
        <div class="col-md-6" id="new-cat">
            <%= link_to 'Add Category', new_category_path, remote: true , class: 'btn btn-success btn-lg text-white text-decoration-none ' %>
        </div>
    </div>
  </div>

</div>
