<tr scope="row">
  <td><%= user.firstname %></td>
  <td><%= user.lastname %></td>
  <td><%= user.role %></td>
  <td><%= user.email %></td>
  <td><%= link_to 'Update', edit_user_path(user), class: 'btn-sm btn-success text-white text-decoration-none'%>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: "delete btn-sm btn-danger text-white text-decoration-none" %>
  </td>
</tr>
